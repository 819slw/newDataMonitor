<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.DetailHistoryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/gaojing"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="#d81e06"
                android:layout_weight="1"
                android:text="告警推送"></TextView>
            <ImageView
                android:id="@+id/iv_alarm_time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/shijian"></ImageView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_nodata"
                android:layout_height="120dp"
                android:layout_width="match_parent"
                android:text="暂无数据"
                android:background="@color/purple_200"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"></TextView>

            <HorizontalScrollView
                android:id="@+id/sv_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/dingshi"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/purple_200"
                android:layout_marginLeft="5dp"
                android:text="定时推送"></TextView>
            <ImageView
                android:id="@+id/iv_log_time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/shijian"></ImageView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_nodata1"
                android:layout_height="120dp"
                android:layout_width="match_parent"
                android:text="暂无数据"
                android:background="@color/purple_200"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"></TextView>

            <HorizontalScrollView
                android:id="@+id/sv_box1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_box1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>




    </LinearLayout>
    </LinearLayout>
</ScrollView>